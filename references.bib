	author = {Baumgartner, Martin and Veeranki, Sai Pavan Kumar and Hayn, Dieter and Schreier, Günter},
	month = sep,
	year = {2023},
	keywords = {Artificial Intelligence, Decentral learning, Decision-support, Deep learning, Machine learning, Privacy-preserving artificial intelligence},
