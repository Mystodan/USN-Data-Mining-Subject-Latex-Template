	number = {1},
	urldate = {2024-09-07},
	journal = {Scientific Reports},
	author = {Zheng, Jianwei and Chu, Huimin and Struppa, Daniele and Zhang, Jianming and Yacoub, Sir Magdi and El-Askary, Hesham and Chang, Anthony and Ehwerhemuepha, Louis and Abudayyeh, Islam and Barrett, Alexander and Fu, Guohua and Yao, Hai and Li, Dongbo and Guo, Hangyuan and Rakovski, Cyril},
